  <body>
  
  <input type="hidden" name="post_no" value="" id="post_no" /> 
        
  <!-- header include   -->
  <% include ./inc1 %>    
      
      
  <div class="content" style="margin-top:90px;">
    <h1 style="color:#3388cc;padding:5px;"><%= title %></h1>   
      
	<div style="width:100%;height:7px;background:#F2F2F4;margin-top:15px;"></div>
      
	<div style="width:100%;display:flex;justify-content:center;">
	<table style="width:100%;" border="0" class="main_table">    
    <%
    for(var i = 0; i < rows.length; i++)
    {
    %>
           <tr>
            <td class="bbcTitle">
                <%= rows[i].post_title %>            
            </td>
            <td align="center">
                <%= rows[i].member_name %>         
            </td>
            <td align="center">
                <%= rows[i].cat_name %>         
            </td>
            <td align="right">
                <span style="margin-left:30px;cursor:pointer;" onclick="postPopup(this);" pno="<%= rows[i].post_no %>" >&#9776;</span>
            </td>
           </tr>        
    <%  
    }
    %>
    </table>
    </div>     
  </div>
      
  <div class="bottom">
    <table style="width:100%; height:40px; text-align: center; vertical-align: middle;background:#FFFFFF;">
        <tr><td colspan="4" style="border-bottom:solid 1px #CCCCCC;"></td></tr>
        <tr><td width="25%;" align="center" style="font-size:14px;font-family:Arial,맑은 고딕,돋움;border-right:solid 1px #CCCCCC;padding:10px;">
